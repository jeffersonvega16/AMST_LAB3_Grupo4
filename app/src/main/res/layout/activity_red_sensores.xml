<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedSensores">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="204dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="Control de sensores"
            android:textColor="@color/purple_500"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="119dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="214dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="106dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Temperatura Actual"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tempVal"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="111dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="333dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="97dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/pesoVal"
            android:layout_width="21dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="108dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="444dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="125dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/humedadVal"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="148dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="552dp">

        <Button
            android:id="@+id/btn_datos"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:text="Ingresar Valores" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>